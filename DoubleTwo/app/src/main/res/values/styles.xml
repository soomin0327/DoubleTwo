<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="signupFont1">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/fontLight</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="signupMoreText">
        <item name="android:textColor">@color/fontLight</item>
        <item name="android:textSize">8dp</item>
    </style>

    <style name="SearchViewCustom" parent="Widget.AppCompat.SearchView">
        <item name = "searchIcon"> @drawable/ic_search</item>
        <item name="queryBackground">@android:color/white</item>
    </style>

</resources>
