<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/loginBackground">

    <android.support.v7.widget.Toolbar
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/tMainPerson"
                    android:layout_width="40dp"
                    android:layout_height="38dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circle_border"
                    android:src="@drawable/ic_name_person" />

                <LinearLayout
                    android:id="@+id/tMainName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tMainPerson">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="고수민"
                        android:textColor="@color/fontLight" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="님"
                        android:textColor="@color/fontLight" />
                </LinearLayout>

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_above="@+id/tMainName"
                    android:layout_alignRight="@+id/tMainName"
                    android:background="@drawable/red_circle"
                    android:elevation="5dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/fontLight" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.SearchView
        android:background="@drawable/custom_round_searchview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SearchViewCustom"></android.support.v7.widget.SearchView>

</LinearLayout>