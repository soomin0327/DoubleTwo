<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@drawable/signup_gradiation" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="@android:color/white" />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:id="@+id/appImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/white_circle" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logo_blue" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appImage"
        android:layout_centerHorizontal="true"
        android:text="S  I  G  N     U  P"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_above="@id/dotParent"
        android:layout_margin="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:hint="name"
            android:textColorHint="@color/lightFont"
            android:textColor="@color/lightFont"
            android:drawableRight="@drawable/custom_ic_name_person"
            android:backgroundTint="@color/lightFont"
            android:id="@+id/signupNameEditText"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputEditText
            android:hint="birthday"
            android:textColorHint="@color/lightFont"
            android:textColor="@color/lightFont"
            android:drawableRight="@drawable/custom_ic_age_cal"
            android:backgroundTint="@color/lightFont"
            android:textSize="15dp"
            android:id="@+id/signupPhoneNumEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputEditText
            android:hint="phoneNum"
            android:textColorHint="@color/lightFont"
            android:textColor="@color/lightFont"
            android:drawableRight="@drawable/custom_ic_phone"
            android:backgroundTint="@color/lightFont"
            android:id="@+id/signupBirthEditText"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputEditText
            android:hint="gender"
            android:textSize="15dp"
            android:textColorHint="@color/lightFont"
            android:textColor="@color/lightFont"
            android:drawableRight="@drawable/custom_ic_sex"
            android:backgroundTint="@color/lightFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dotParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/ic_circle_full" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/ic_circle_full" />

        <ImageView
            android:id="@+id/thirdPageDot3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/ic_circle_full" />

        <ImageView
            android:id="@+id/fourthPage3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/ic_circle_empty" />

    </LinearLayout>

</RelativeLayout>